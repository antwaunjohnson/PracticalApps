@page
@using Packt.Shared
@model Northwind.Web.Pages.CustomersModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}


<div class="row">
    <h1 class="display-2">Customers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Contact Name</th>
                <th>Title</th>
                <th>Phone</th>
                <th>Country</th>
                <th>Orders</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Customers is not null)
            {
                @foreach(Customer c in Model.Customers)
                {
                    <tr>
                        <td>@c.ContactName</td>
                        <td>@c.ContactTitle</td>
                        <td>@c.Phone</td>
                        <td>@c.Country</td>
                        <td>@c.Orders.Count()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>